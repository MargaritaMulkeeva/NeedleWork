<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".thirdFragment"
    android:background="@color/MainPink"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_top_panel"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow"
                android:background="#0000"/>

            <TextView
                android:id="@+id/tv_name"
                style="@style/topText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Ваш профиль"
                android:textSize="20dp" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/MainOrange"
            android:layout_gravity="center"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="117dp"
                android:layout_height="104dp"
                android:src="@drawable/gray"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/darkRegularText"
            android:layout_marginTop="8dp"
            android:text="Никнейм"
            android:textSize="12dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:elevation="10dp"
            android:background="@drawable/round_view"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/camera"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/darkRegularText"
                    android:textSize="15dp"
                    android:text="Изменить аватар"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"/>

                <Button
                    android:id="@+id/btn_changePhoto"
                    android:layout_width="140dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/round_button"
                    android:text="Выбрать фото"
                    style="@style/darkRegularText"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_3"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/pencil"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/darkRegularText"
                        android:textSize="15dp"
                        android:text="Изменить никнейм"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_newNickname"
                    android:layout_width="270dp"
                    android:layout_height="19dp"
                    android:inputType="text"
                    android:hint="Введите новый никнейм"
                    android:background="@drawable/round_et"
                    style="@style/italic"
                    android:textSize="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:textColorHint="@color/MainText"/>

                <Button
                    android:id="@+id/btn_changeNickname"
                    android:layout_width="140dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:background="@drawable/round_button"
                    android:text="Изменить"
                    android:layout_marginTop="8dp"
                    style="@style/darkRegularText"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_3"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/key"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/darkRegularText"
                        android:textSize="15dp"
                        android:text="Изменить никнейм"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_oldPassword"
                    android:layout_width="270dp"
                    android:layout_height="19dp"
                    android:inputType="text"
                    android:hint="Введите старый пароль"
                    android:background="@drawable/round_et"
                    style="@style/italic"
                    android:textSize="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:textColorHint="@color/MainText"/>

                <EditText
                    android:id="@+id/et_newPassword"
                    android:layout_width="270dp"
                    android:layout_height="19dp"
                    android:inputType="text"
                    android:hint="Введите новый пароль"
                    android:background="@drawable/round_et"
                    style="@style/italic"
                    android:textSize="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:textColorHint="@color/MainText"/>

                <EditText
                    android:id="@+id/et_repeatPassword"
                    android:layout_width="270dp"
                    android:layout_height="19dp"
                    android:inputType="text"
                    android:hint="Повторите пароль"
                    android:background="@drawable/round_et"
                    style="@style/italic"
                    android:textSize="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:textColorHint="@color/MainText"/>

                <Button
                    android:id="@+id/btn_changePassword"
                    android:layout_width="140dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:background="@drawable/round_button"
                    android:text="Изменить"
                    android:layout_marginTop="8dp"
                    style="@style/darkRegularText"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_3"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/login"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/darkRegularText"
                        android:textSize="15dp"
                        android:text="Изменить логин"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_newLogin"
                    android:layout_width="270dp"
                    android:layout_height="19dp"
                    android:inputType="text"
                    android:hint="Введите новый логин"
                    android:background="@drawable/round_et"
                    style="@style/italic"
                    android:textSize="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:textColorHint="@color/MainText"/>

                <Button
                    android:id="@+id/btn_changeLogin"
                    android:layout_width="140dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:background="@drawable/round_button"
                    android:text="Изменить"
                    android:layout_marginTop="8dp"
                    style="@style/darkRegularText"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_3"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/chat"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/darkRegularText"
                    android:textSize="15dp"
                    android:text="Ваши обсуждения"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"/>

                <ImageButton
                    android:id="@+id/btn_userDisc"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/arrow"
                    android:rotation="180"
                    android:background="#0000"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_3"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/emoty_bookmark"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/darkRegularText"
                    android:textSize="15dp"
                    android:text="Закладки"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"/>

                <ImageButton
                    android:id="@+id/btn_bookmark"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/arrow"
                    android:rotation="180"
                    android:background="#0000"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_exit"
                android:layout_width="140dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:background="@drawable/round_button"
                android:text="Выйти"
                android:layout_marginTop="32dp"
                style="@style/darkRegularText"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>