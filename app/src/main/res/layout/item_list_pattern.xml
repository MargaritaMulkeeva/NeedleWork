<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/round_panel"
    android:elevation="1dp"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_photo"
                android:layout_width="90dp"
                android:scaleType="fitCenter"
                android:layout_height="70dp"
                android:src="@drawable/avatar_placeholder"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Длинный шарф из двух видов пряжи"
                    style="@style/darkRegularText"
                    android:layout_weight="0.1"
                    android:textSize="12dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/secondRegularText"
                    android:textSize="9dp"
                    android:text="5.6"
                    android:layout_marginLeft="2dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/text_descriprion"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Модный длинный шарф (длина модели 2,5 метра!) связан из пряжи двух типов восьми разных цветов."
                style="@style/secondRegularText"
                android:textSize="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>